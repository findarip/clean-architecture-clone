{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allow-declarations": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": [
        "src/entities/*",
      ],
      "@application/*": [
        "src/application/*",
      ],
      "@adapter/*": [
        "src/adapter/*",
      ],
      "@framework/*": [
        "src/framework/*",
      ]
    }
  },
  "exclude": [
    "node_modules","docs"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}