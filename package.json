{
  "name": "clean-architecture-clone",
  "version": "1.0.0",
  "description": "clean architecture clone",
  "author": "sankester",
  "license": "MIT",
  "private": true,
  "repository": "github:sankester/clean-architecture-clone",
  "scripts": {
    "start": "ENV_FILE=./config/.env.prod node ./dist/framework/server/server.js",
    "dev": "ENV_FILE=./config/.env.dev nodemon ./dist/framework/server/server.js",
    "build": "rm -rf ./dist && tsc -p tsconfig-build.json",
    "watch": "rm -rf ./dist && tsc-watch -p tsconfig-build.json --onSuccess 'yarn dev'",
    "tests": "ENV_FILE=./config/.env.test jest",
    "tests:co": "ENV_FILE=./config/.env.test jest --coverage",
    "dev:up": "docker-compose -f docker-compose.dev.yml up --build clean-architecture-clone",
    "dev:down": "docker-compose -f docker-compose.dev.yml down"  
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "dotenv-extended": "^2.9.0",
    "dotenv-parse-variables": "^1.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.11.10",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.4",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.9",
    "@types/dotenv-parse-variables": "^0.2.0",
    "@types/express": "^4.17.9",
    "@types/faker": "^5.1.5",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.19",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "bson-objectid": "^1.3.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "14.x"
  },
  "_moduleAliases": {
    "@entities": "dist/entities/",
    "@application": "dist/application/",
    "@adapter": "dist/adapter/",
    "@framework": "dist/framework/"
  }
}
